// написать программу, которая принимает на вход трехзначное числоб а на выходе показывает вторую цифру.

bool ValidateNumberRank3(int number)
{
    if (number >99 && number <1000)
    {
        return true;
    }
    System.Console.WriteLine("Введено не трехзначное число");
    return false;
 }
 
 int number = InputInt( "Введите трехзначное число");
 if (ValidateNumberRank3(number))
 {
      int SekondRank = number % 10;
      System .Console.WriteLine($" Вторая цифра числа {number} равна {SekondRank}");
 }
